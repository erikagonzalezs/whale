<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SingupActivity">

    <TextView
        android:id="@+id/tvRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="REGISTRARSE"
        android:textColor="@color/darker_blue"
        android:textSize="50sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserIcon"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/border_style"
                    android:src="@drawable/ic_launcher_foreground"
                    app:srcCompat="@drawable/whale_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnUploadProfileIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="25dp"
                        android:onClick="upload"
                        android:background="@drawable/button_style"
                        android:fontFamily="@font/roboto_bold"
                        android:text="SUBIR DESDE LA GALERIA"
                        app:backgroundTint="@color/darker_blue" />

                    <Button
                        android:id="@+id/btnTakeProfileIcon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="camera"
                        android:background="@drawable/button_style"
                        android:fontFamily="@font/roboto_bold"
                        android:text="TOMAR FOTO"
                        app:backgroundTint="@color/darker_blue" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:hint="John"
                android:text="NOMBRE"
                android:textColor="@color/darker_blue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_style"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="John"
                android:inputType="textPersonName"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints" />

            <TextView
                android:id="@+id/tvApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="APELLIDO"
                android:textColor="@color/darker_blue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etApellido"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_style"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Smith"
                android:inputType="textPersonName"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="CORREO"
                android:textColor="@color/darker_blue"
                android:textColorHighlight="@color/darker_blue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etRegisterCorreo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_style"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="example@whale.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints" />

            <TextView
                android:id="@+id/tvRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="CONTRASEÑA"
                android:textColor="@color/darker_blue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etRegisterPassword"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_style"
                android:ems="10"
                android:hint="*******"
                android:inputType="textPassword"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints" />

            <TextView
                android:id="@+id/tvIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="IDENTIFICACIÓN"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etIdentificacion"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_style"
                android:ems="10"
                android:hint="12345678"
                android:inputType="number"
                android:textColor="@color/darker_blue"
                android:textColorHint="@color/hints" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/roboto_bold"
                android:text="REGISTRARSE"
                android:textColor="@color/gray"
                android:textSize="27sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>